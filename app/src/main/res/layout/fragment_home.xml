<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="#f7f7ff"

    >

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                android:id="@+id/settings_move"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="時間割設定"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/kadomaru"
                app:icon="@drawable/icon_list_setting"

                app:backgroundTint="@null">
            </Button>




            <TextView
                android:id="@+id/時間割英語"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/settings_move"
                android:text="時間割の教科を設定・変更できます。"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/white"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/時間割英語"

                android:gravity="center"
                />

            <Button
                android:id="@+id/touroku_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="時間割の時間を設定"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/white"
                android:background="@drawable/kadomaru"
                app:icon="@drawable/icon_clock_setting"
                app:backgroundTint="@null"
                />

            <TextView
                android:id="@+id/時間割登録英語"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/touroku_button"
                android:text="時間割の左の時間を学校ごとに設定できます。"
                android:gravity="center"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>